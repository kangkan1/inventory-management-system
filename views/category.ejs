<!DOCTYPE html>
<html>
    <head>
        <title><%= title %> | Inventory</title>
        <script src="js/bootstrap.js"></script>
        <script src="js/ace/ace.js" type="text/javascript" charset="utf-8"></script>
        <!-- <script src="js/ace/theme-monokai.js"></script> -->
        <link rel="stylesheet" href="css/bootstrap.css">
        <style type="text/css" media="screen">
          #editor {
            width: 98%;
            height: 40rem;
          }
      </style>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>
        <div class="row">
            <% for(let i=0;i<category.length;i++) { %>
                <div class="card my-1 mx-1" style="width: 18rem;">
                    <div class="card-body">
                    <h5 class="card-title"><%= category[i]['name']%></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Price:<%= category[i]['price']%> <%= category[i]['currency']%> </h6>
                    <p class="card-text">Quantity: <%= category[i]['quantity']%></p>
                    <a href="/product?id=<%=category[i]['id']%>" class="btn btn-outline-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </a>
                    </div>
                </div>
            <% } %>
        </div>
        <%- include('./partials/footer.ejs') %>
        
        
    </body>
</html>